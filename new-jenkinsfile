
String buildShell = "${env.buildShell}"
String targetDir  = "${env.targetDir}"

node("any"){
    stage("checkout"){
        checkout scm
    }
    
    
    stage("build"){
        sh " ${buildShell} "
    }
    
    
    stage("publish"){
        sh " mkdir -p ${targetDir} "
        sh " dotnet publish -o ${targetDir}  && ls -l ${targetDir}"
        
    }
}
